colors:
  name: Simple Rainbow
  author: ""
  primary:
    background: "#575757"
    foreground: "#dcdccc"
  cursor:
    text: "#575757"
    cursor: "#dcdccc"
  normal:
    black: "#666666"
    red: "#ff8278"
    green: "#bde077"
    yellow: "#eadc84"
    blue: "#77bee0"
    magenta: "#dd91f3"
    cyan: "#ffc178"
    white: "#dddddd"
  bright:
    black: "#888888"
    red: "#ff8278"
    green: "#bde077"
    yellow: "#eadc84"
    blue: "#77bee0"
    magenta: "#dd91f3"
    cyan: "#ffc178"
    white: "#cccccc"
key_bindings:
  - {
      key: Return,
      mods: Control|Shift,
      action: SpawnNewInstance
    }

window.opacity: 1.00

window:
  padding:
    x: 10
    y: 10

font:
  normal:
    family: Mononoki Nerd Font Mono
    style: regualr
  size: 12
live_config_reload: true
dynamic_padding: true
theme: Simple_rainbow
