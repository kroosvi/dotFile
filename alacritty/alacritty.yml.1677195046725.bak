colors:
  name: Grayscale (dark)
  author: Chris Kempson
  primary:
    background: "#101010"
    foreground: "#b9b9b9"
  cursor:
    text: "#101010"
    cursor: "#b9b9b9"
  normal:
    black: "#101010"
    red: "#7c7c7c"
    green: "#8e8e8e"
    yellow: "#a0a0a0"
    blue: "#686868"
    magenta: "#747474"
    cyan: "#868686"
    white: "#b9b9b9"
  bright:
    black: "#525252"
    red: "#7c7c7c"
    green: "#8e8e8e"
    yellow: "#a0a0a0"
    blue: "#686868"
    magenta: "#747474"
    cyan: "#868686"
    white: "#f7f7f7"
key_bindings:
  - {
      key: Return,
      mods: Control|Shift,
      action: SpawnNewInstance
    }

window.opacity: 1.00

window:
  padding:
    x: 10
    y: 10

font:
  normal:
    family: source code pro
    style: thin
  size: 12
live_config_reload: true
dynamic_padding: true
theme: Grayscale.dark
