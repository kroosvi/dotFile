colors:
  # Default colors
  primary:
    background: '#27292c'
    foreground: '#d0d2d1'

  # Normal colors
  normal:
    black: '#35383b'
    red: '#b05655'
    green: '#769972'
    yellow: '#e1a574'
    blue: '#7693ac'
    magenta: '#977ba0'
    cyan: '#749e99'
    white: '#848b92'

  # Bright colors
  bright:
    black: '#484c52'
    red: '#d27c7b'
    green: '#dffebe'
    yellow: '#f0d189'
    blue: '#96b1c9'
    magenta: '#bfa5c7'
    cyan: '#9fc9c3'
    white: '#fcf7e2'
key_bindings:
  - {
      key: Return,
      mods: Control|Shift,
      action: SpawnNewInstance
    }

window.opacity: 1.00

window:
  padding:
    x: 10
    y: 10

font:
  normal:
    family: source code pro
    style: thin
  size: 12
live_config_reload: true
dynamic_padding: true
theme: Hybrid
