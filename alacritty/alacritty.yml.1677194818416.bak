colors:
  name: Ocean (light)
  author: Chris Kempson
  primary:
    background: "#eff1f5"
    foreground: "#4f5b66"
  cursor:
    text: "#eff1f5"
    cursor: "#4f5b66"
  normal:
    black: "#2b303b"
    red: "#bf616a"
    green: "#a3be8c"
    yellow: "#ebcb8b"
    blue: "#8fa1b3"
    magenta: "#b48ead"
    cyan: "#96b5b4"
    white: "#c0c5ce"
  bright:
    black: "#65737e"
    red: "#bf616a"
    green: "#a3be8c"
    yellow: "#ebcb8b"
    blue: "#8fa1b3"
    magenta: "#b48ead"
    cyan: "#96b5b4"
    white: "#eff1f5"
key_bindings:
  - {
      key: Return,
      mods: Control|Shift,
      action: SpawnNewInstance
    }

window.opacity: 1.00

window:
  padding:
    x: 10
    y: 10

font:
  normal:
    family: source code pro
    style: thin
  size: 12
live_config_reload: true
dynamic_padding: true
theme: Ocean.light
